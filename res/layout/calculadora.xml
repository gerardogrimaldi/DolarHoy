<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:fillViewport="true" >
        <com.Gerardo.Grimaldi.DolarHoy.Infraestructure.NowLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e5e5e5"
                android:orientation="vertical" >
            <LinearLayout
                    style="@style/nowCardStyle"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    tools:context=".MainActivity"
                    android:orientation="vertical"
                    android:gravity="top"
                    >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    >
                <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:baselineAligned="false"
                            android:focusable="false">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=" Oficial $"
                                  android:id="@+id/textView1"
                                  android:textSize="30dp"
                                  android:gravity="right"/>
                        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dolarVenta"
                                  android:layout_gravity="center" android:editable="false" android:enabled="true"
                                  android:gravity="left" android:layout_column="1"/>
                    </TableRow>
                    <TableRow android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_gravity="center"
                              android:id="@+id/tableRow2">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=" Blue $" android:id="@+id/textView"
                                  android:layout_gravity="center_vertical"
                                  android:textSize="30dp" android:gravity="right"/>
                        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dolarBlueVenta"
                                  android:layout_gravity="center" android:editable="false" android:enabled="true"
                                  android:gravity="left" android:layout_column="1"/>
                    </TableRow>
                    <TableRow android:layout_width="wrap_content"
                              android:layout_height="50dp"
                              android:layout_gravity="center"
                              android:id="@+id/tableRow3">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=" Tarjeta $"
                                  android:id="@+id/textView3"
                                  android:layout_gravity="center_vertical"
                                  android:textSize="30dp" android:gravity="right"/>
                        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dolarTarjeta"
                                  android:layout_gravity="center" android:editable="false" android:enabled="true"
                                  android:gravity="left" android:layout_column="1"/>
                    </TableRow>
                    <TableRow android:layout_width="wrap_content"
                              android:layout_height="50dp"
                              android:layout_gravity="center"
                              android:id="@+id/tableRow4">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text=" Euro $"
                                  android:id="@+id/textView4"
                                  android:layout_gravity="center_vertical"
                                  android:textSize="30dp" android:gravity="right"/>
                        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/EuroVenta"
                                  android:layout_gravity="center" android:editable="false" android:enabled="true"
                                  android:gravity="left" android:layout_column="1"/>
                    </TableRow>
                </TableLayout>
                <TableRow android:layout_width="wrap_content" android:layout_height="50dp" android:layout_gravity="center" android:id="@+id/tableRow1">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/editText2" android:layout_gravity="center" android:hint="Valor a calcular..."
                        android:digits="0123456789.," android:textIsSelectable="true"
                        android:maxLines="1" android:maxLength="15" android:inputType="numberDecimal"
                        android:enabled="true" android:editable="true"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calcular"
                        android:id="@+id/button"
                        android:layout_gravity="center"/>
                </TableRow>
                </LinearLayout>
            </LinearLayout>
        </com.Gerardo.Grimaldi.DolarHoy.Infraestructure.NowLayout>
    </ScrollView>
</LinearLayout>

