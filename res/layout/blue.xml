<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_margin="20dp"
            >

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/tableRow">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue/Paralelo"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:textSize="30dp"/>
        </TableRow>
        <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:baselineAligned="false" android:layout_gravity="center" android:id="@+id/tableLayout">
            <TableRow android:layout_width="wrap_content" android:layout_height="50dp"
                      android:layout_gravity="center|right" android:layout_marginRight="10dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Compra $" android:id="@+id/textView1" android:layout_gravity="center_vertical"
                          android:textSize="30dp" android:gravity="right"/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/editText" android:layout_gravity="center" android:editable="false"
                          android:enabled="true" android:text="Valor" android:gravity="left" android:layout_column="1"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="50dp"
                      android:layout_gravity="center|right" android:layout_marginRight="10dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Venta $" android:id="@+id/textView" android:textSize="30dp"
                          android:gravity="right"/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/editText1" android:layout_gravity="center" android:editable="false"
                          android:enabled="true" android:text="Valor" android:gravity="left" android:layout_column="1"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>