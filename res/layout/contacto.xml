<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >
    <com.Gerardo.Grimaldi.DolarHoy.Infraestructure.NowLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:orientation="vertical" >
    <LinearLayout
            style="@style/nowCardStyle"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:gravity="top"
            >
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Contacto"
                      android:id="@+id/textView2"
                      android:layout_gravity="center|left"
                      android:textSize="30dp"/>
        </TableRow>
        <TableRow android:layout_height="50dp"
                  android:layout_width="fill_parent"
                  android:layout_gravity="center">
            <EditText android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:id="@+id/editNombre"
                      android:layout_gravity="center"
                      android:enabled="true"
                      android:maxLines="1"
                      android:maxLength="50"
                      android:editable="true"
                      android:hint="Nombre..."
                      android:inputType="textPersonName"/>
        </TableRow>
        <TableRow android:layout_gravity="center|top" android:layout_height="50dp"
                  android:layout_width="fill_parent">
            <EditText android:editable="true"
                      android:enabled="true"
                      android:id="@+id/editEmail"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:maxLines="1"
                      android:maxLength="50"
                      android:hint="Email..."
                      android:inputType="textEmailAddress"/>
        </TableRow>
        <TableRow android:layout_gravity="center|top"
                  android:layout_height="120dp"
                  android:layout_width="match_parent"
                  android:id="@+id/tableRow">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center">
                <EditText android:editable="true"
                          android:enabled="true"
                          android:id="@+id/editComment"
                          android:layout_gravity="center"
                          android:layout_height="match_parent"
                          android:layout_width="match_parent"
                          android:hint="Comentarios..."
                          android:maxLines="5"
                          android:inputType="textCapCharacters|textLongMessage"/>
            </LinearLayout>
        </TableRow>
        <Button android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="Enviar"
                android:id="@+id/btnEnviar" android:layout_gravity="center"/>
    </LinearLayout>
    </com.Gerardo.Grimaldi.DolarHoy.Infraestructure.NowLayout>
    </ScrollView>

</LinearLayout>